{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "built",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "types": ["chrome", "node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/background.ts",
    "src/options/options.ts",
    "src/popup/popup.ts",
    "src/vue-shims.d.ts",
    "types/index.d.ts"
  ],
  "exclude": ["node_modules"]
}
