{
  "compilerOptions": {
    "outDir": "./built",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "types": ["chrome", "node", "jest"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "__tests__/**/*", "types/index.d.ts"],
  "exclude": ["node_modules"]
}
